<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="60px"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"

        android:text="First Name"
        android:textSize="40px"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter First Name"
        android:drawableLeft="@drawable/baseline_text_snippet_24"
        android:drawablePadding="20px"
        android:textColor="@color/black"
        android:id="@+id/fnet"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"

        android:text="Last Name"
        android:textSize="40px"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Last Name"
        android:drawableLeft="@drawable/baseline_text_snippet_24"
        android:drawablePadding="20px"
        android:textColor="@color/black"
        android:id="@+id/lnet"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="College"
        android:textColor="@color/black"
        android:textSize="40px"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="20px"
        android:drawableLeft="@drawable/baseline_school_24"
        android:hint="Enter College "
        android:textColor="@color/black"
        android:id="@+id/clget"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Date of Birth"
        android:textSize="40px"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DD/MM/YYYY"
        android:inputType="date"
        android:drawablePadding="20px"
        android:drawableLeft="@drawable/baseline_edit_calendar_24"
        android:textColor="@color/black"
        android:id="@+id/dobet"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Course"
        android:textSize="40px"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Course Name"
        android:drawablePadding="20px"
        android:drawableLeft="@drawable/baseline_school_24"
        android:textColor="@color/black"
        android:id="@+id/couret"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Mobile No"
        android:textSize="40px"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="20px"
        android:drawableLeft="@drawable/baseline_phone_android_24"
        android:inputType="number"
        android:hint="Enter Mobile Number"
        android:textColor="@color/black"
        android:id="@+id/mobet"/>
    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:textSize="40px"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Mail ID "
        android:drawablePadding="20px"
        android:drawableLeft="@drawable/baseline_mail_24"
        android:textColor="@color/black"
        android:id="@+id/mailet"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Address"
        android:textSize="40px"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Address"
        android:drawablePadding="20px"
        android:drawableLeft="@drawable/baseline_home_24"
        android:textColor="@color/black"
        android:id="@+id/addet"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background2"
        android:textColor="@color/black"
        android:id="@+id/addbtn"
        android:text="ADD"/>

</LinearLayout>